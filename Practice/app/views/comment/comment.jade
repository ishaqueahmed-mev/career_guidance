extends ../layout

block content

	h1 For comments
	
	div.row.container.col-md-6.col-md-offset-3
		form(method="POST", action="/comment/create", id="main")
			div.form-group
				input(type="hidden", name="_method", value="put")
				label.sr-only(for="comment") Leave a comment      
				textarea.form-control(name="comment", id="comment", placeholder="Enter stream title",
					 autofocus required)
			
			div.form-group
				button.btn.btn-lg.btn-primary.btn-block(type="submit", id="btnSave") Submit