extends layout

block content

	script.
		$(document).ready(function(){
			var username = document.getElementById('username');
			var password = document.getElementById('password');
			
			$("#submit").click(function() {
				if(username.value == "admin" && password.value == "admin") {
					$('#loginForm').attr('action', '/stream/create');
				}
				else {
					alert("Wrong credentials entered");
					return false;
				}
			});
		});
	
	title= title
	h1.text-center Career Guidance system
	
	div.row.col-md-4.col-md-offset-4
			
			form.form-auth(method="get", id="loginForm")
				
				h2.form-signin-heading.text-center  #{title}
				br
				div.form-group
					label.sr-only(for="username") Username      
					input.form-control(type="text", name="username", id="username", placeholder="Username", autofocus, required)
				
				div.form-group
					label.sr-only(for="password") Password	
					input.form-control(type="password" name="password" id="password" placeholder="Password", required)
		
				div.form-group
					button.btn.btn-lg.btn-primary.btn-block(type="submit", id="submit") Login